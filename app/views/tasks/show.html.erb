<h1>id:<%= @task.id %>のタスク詳細ページ</h1>

<table class="table table-bordered">
    <tr>
      <th>id</th>
      <td><%= @task.id %></td>
    </tr>
    <tr>
      <th>task</th>
      <td><%= @task.content %></td>
    </tr>
    <tr>
      <th>status</th>
      <td><%= @task.status %></td>
    </tr>
</table>
<%= link_to 'このメッセージを編集する', edit_task_path(@task),class:"btn btn-primary" %>
<%= link_to 'このメッセージを削除する', @task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' },class:"btn btn-danger" %>